{% extends "layouts/site.twig" %}
{% block content %}
	<div style="margin-top: 70px" class="container">

		<div class="row">
			<div class="col-md-8">
				{% if carteira is defined %}
					<h2>Editando Carteira</h2>
				{% else %}
					<h2>Nova Carteira</h2>
				{% endif %}
			</div>
			<div class="col-md-4">
				<a href="/carteiras" class="btn btn-secondary btn-block">Voltar</a>
			</div>
		</div>

		{% if success ==  true %}
			<div class='alert alert-success' role='alert'>
				Carteira criada com sucesso!
			</div>
		{% endif %}
		{% if success == false and message is defined %}
			<div class='alert alert-danger' role='alert'>
				{{ message }}
			</div>
		{% endif %}

		<div class="row">
			<div class="col-md-12">
				<form method="POST">
					<div class="row">
						<div class="col-md-6">
							<label for="name">Nome*</label>
							{% if carteira is defined %}
								<input type="number" id="id" value="{{carteira.id}}" readonly hidden name="id" class="form-control" required>
								<input type="text" id="name" value="{{carteira.name}}" name="name" class="form-control" required>
							{% else %}
								<input type="text" id="name" name="name" class="form-control" required>
							{% endif %}
						</div>
						<div class="col-md-6">
							<label for="value">Valor*</label>
							{% if carteira is defined %}
								<input type="number" name="value" id="value" value="{{carteira.value}}" class="form-control" required>
							{% else %}
								<input type="number" name="value" id="value" class="form-control" required>
							{% endif %}

						</div>
					</div>


					{% if carteira is defined %}
						<div class="row">
							<div class="col-md-3">
								<br>
								<button class="btn btn-success btn-block" formaction="/carteiras/editar" type="submit">Salvar</button>
							</div>
							<div class="col-md-3">
								<br>
								<button class="btn btn-danger btn-block" formaction="/carteiras/excluir" type="submit">Excluir</button>
							</div>
						</div>
					{% else %}
						<div class="row">
							<div class="col-md-3">
								<br>
								<button class="btn btn-success btn-block" formaction="/carteiras/criar" type="submit">Salvar</button>
							</div>
						</div>
					{% endif %}

				</form>
			</div>
		</div>
	</div>
{% endblock %}
